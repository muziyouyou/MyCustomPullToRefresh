<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_item_fangxing"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/ll_synthesize_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:singleLine="true"
        android:text="title"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/ll_synthesize_body"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="body"
         android:textColor="#99000000"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/ll_synthesize_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="author"
             android:textColor="#77000000"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_time" />

            <TextView
                android:id="@+id/ll_synthesize_pubDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="pubDate"
                 android:textColor="#77000000"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_comment_count" />

            <TextView
                 android:textColor="#77000000"
                android:id="@+id/ll_synthesize_commentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="commentCount"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

  <!--   <View
        android:background="#33000000"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" /> -->

</LinearLayout>