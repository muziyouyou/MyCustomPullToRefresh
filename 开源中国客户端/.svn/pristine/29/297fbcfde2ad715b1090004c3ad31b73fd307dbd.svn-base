<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <com.itheima.oschina.ui.view.LazyViewPager
            android:id="@+id/vp_miancontent_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0" >
        </com.itheima.oschina.ui.view.LazyViewPager>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioGroup
                android:id="@+id/radiogroup_mian_menu"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="2dp" >

                <RadioButton
                    android:id="@+id/ra_mian_menu_sum"
                    style="@style/main_tab_bottom"
                    android:drawableTop="@drawable/selector_menu_sum_pic"
                    android:text="综合"
                    android:textColor="@color/selector_menu_text" />

                <RadioButton
                    android:id="@+id/ra_mian_menu_move"
                    style="@style/main_tab_bottom"
                    android:drawableTop="@drawable/selector_menu_move_pic"
                    android:text="动弹"
                    android:textColor="@color/selector_menu_text" />

                <ImageButton
                    android:id="@+id/ib_mian_menu_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:src="@drawable/selector_menu_add_pic" />

                <RadioButton
                    android:id="@+id/ra_mian_menu_find"
                    style="@style/main_tab_bottom"
                    android:drawableTop="@drawable/selector_menu_find_pic"
                    android:text="发现"
                    android:textColor="@color/selector_menu_text" />

                <RadioButton
                    android:id="@+id/ra_mian_menu_me"
                    style="@style/main_tab_bottom"
                    android:drawableTop="@drawable/selector_menu_me_pic"
                    android:text="我"
                    android:textColor="@color/selector_menu_text" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>