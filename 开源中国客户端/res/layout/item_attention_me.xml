<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/selector_item_circle"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/iv_item_attention_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/widget_dface" />

    <LinearLayout
        android:id="@+id/ll_item_attention_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_item_attention_me"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_item_attention_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_item_attention_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="heima程序员"
                android:textColor="@color/black" >
            </TextView>

            <TextView
                android:id="@+id/tv_item_attention_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="更新了动态"
                android:textColor="@color/black" >
            </TextView>

            <TextView
                android:id="@+id/tv_item_attention_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_item_attention_author"
                android:text="更新了动态"
                android:textColor="@color/black" >
            </TextView>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/fl_item_attention_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_item_attention_active"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black" />
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>