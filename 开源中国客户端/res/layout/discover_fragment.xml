<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEBEF"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/discover_friends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_discover"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="11dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_explore_friends" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/actionbar_title_active"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/discover_find"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_discover"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="11dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_explore_finduser" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/quick_option_find"
            android:textSize="17sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:id="@+id/discover_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_discover"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="11dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_explore_event" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/actionbar_title_event"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/discover_scan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_discover"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="11dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_explore_scan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/scan"
            android:textSize="17sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:id="@+id/discover_shake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_discover"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="11dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_explore_shake" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/shake"
            android:textSize="17sp" />
    </LinearLayout>

</LinearLayout>